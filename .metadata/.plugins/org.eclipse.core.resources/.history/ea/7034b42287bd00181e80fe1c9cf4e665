package com.dms.view;

import java.awt.Dimension;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;

public class Record implements ActionListener {
	
	JFrame recordFrame;
	JButton treatmentInfoButton, patientMasterButton;
	public Record() {
	
		recordFrame=new JFrame("Record");
		recordFrame.setPreferredSize(new Dimension(1366,768));
		
		treatmentInfoButton = new JButton("Treatment Info");
		patientMasterButton = new JButton("New Patient");
		
		treatmentInfoButton.setBounds(200, 150, 202, 50);
		patientMasterButton.setBounds(800, 150, 202, 50);
		
		treatmentInfoButton.addActionListener(this);
		patientMasterButton.addActionListener(this);

		recordFrame.setLayout(null);
		recordFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		recordFrame.pack();
		recordFrame.setLocationRelativeTo(null);
		recordFrame.setVisible(true);

		
	}
	
	public static void main(String[] args) {
		new Record();
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		
		
	}

	
	
	
	
}
